[diff]
	tool = vimdiff
	algorithm = patience
[alias]
	ci = commit
	co = checkout
	st = status -sb
	br = branch
	dc = diff --cached -w
	pom = push origin master
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
[apply]
	ignorewhitespace = change
[color]
	ui = auto
[push]
	default = simple
